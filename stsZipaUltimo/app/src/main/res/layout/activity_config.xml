<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    tools:context=".ui.Config.ConfigActivity">
    <TextView
        android:id="@+id/txtVTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ConfiguraciÃ³n del Sistema"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtVPuerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Puerto           :"
        android:textColor="@color/button_text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTitulo" />

    <EditText
        android:id="@+id/edTPuerto"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Puerto"
        android:inputType="textCapCharacters"
        android:text="4008"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/button_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edTDirecApi"
        app:layout_constraintStart_toEndOf="@+id/txtVPuerto"
        app:layout_constraintTop_toTopOf="@+id/txtVTitulo"
        app:layout_constraintVertical_bias="0.983" />

    <TextView
        android:id="@+id/txtDirecApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:text="Direccion Api:"
        android:textColor="@color/button_text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTitulo" />

    <EditText
        android:id="@+id/edTDirecApi"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Dirreccion Web de la Api"
        android:inputType="textWebEditText"
        android:text="@string/ipProduccion"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVTitulo" />

    <Button
        android:id="@+id/btnActualizarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"
        android:text="Actualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTDirecApi" />


</androidx.constraintlayout.widget.ConstraintLayout>